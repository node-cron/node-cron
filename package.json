{
  "name": "node-cron",
  "version": "4.2.1",
  "description": "A Lightweight Task Scheduler for Node.js",
  "author": "Lucas Merencia",
  "license": "ISC",
  "homepage": "https://github.com/merencia/node-cron",
  "type": "module",
  "main": "./dist/cjs/node-cron.js",
  "module": "./dist/esm/node-cron.js",
  "types": "./dist/cjs/node-cron.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/node-cron.js",
      "require": "./dist/cjs/node-cron.js"
    }
  },
  "scripts": {
    "build": "npm run build:esm; npm run build:cjs",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "npm run build:cjs:pre; tsc -p tsconfig.cjs.json; npm run build:cjs:package; npm run build:cjs:post",
    "build:cjs:pre": "mv src/dirname.ts src/dirname_esm.ts; mv src/dirname_cjs.ts src/dirname.ts",
    "build:cjs:package": "echo '{\n  \"type\": \"commonjs\"\n}' > dist/cjs/package.json",
    "build:cjs:post": "mv src/dirname.ts src/dirname_cjs.ts; mv src/dirname_esm.ts src/dirname.ts",
    "check": "npm run lint && npm test",
    "lint": "./node_modules/.bin/eslint ./src",
    "prepack": "npm run build",
    "test": "c8 --reporter text --reporter=lcov --exclude '**/*.test.ts' mocha --recursive './src/**/*.test.ts'",
    "test:nocov": "mocha --recursive **/*.test.ts"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "files": [
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/merencia/node-cron.git"
  },
  "keywords": [
    "cron",
    "scheduler",
    "schedule",
    "task",
    "job"
  ],
  "bugs": {
    "url": "https://github.com/merencia/node-cron/issues"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@tsconfig/recommended": "^1.0.8",
    "@types/chai": "^5.2.1",
    "@types/expect": "^1.20.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.3",
    "@types/sinon": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "c8": "^10.1.3",
    "chai": "^5.2.0",
    "eslint": "^9.26.0",
    "eslint-plugin-mocha": "^10.5.0",
    "eslint-plugin-node": "^11.1.0",
    "globals": "^16.1.0",
    "mocha": "^11.1.0",
    "sinon": "^20.0.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0"
  },
  "c8": {
    "reporter": [
      "html",
      "text"
    ],
    "exclude": [
      "src/test-assets/**"
    ]
  }
}
